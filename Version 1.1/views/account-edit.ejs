<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>DIGITAL TAVERN</title>
    <link rel="icon" href="/img/favicon.png" type="image/png" />
    <link rel="stylesheet" href="/style/background.css" />
    <link rel="stylesheet" href="/style/footer.css" />
    <link rel="stylesheet" href="/style/AccountEdit/account-edit.css" />
  </head>
  <body>
    <div class="container">
      <header>
        <div class="app-introduction">
          <h1>Account edit</h1>
          <p class="pixel-type">
            Update your profile info, change your password, and customize your
            experience.
          </p>
        </div>

        <hr class="app-hr" />

        <nav class="app-navigation" aria-label="Main navigation">
          <a href="/"><p>HOME</p></a>
          <a href="/quest"><p>QUEST</p></a>
          <a href="/guild"><p>GUILD</p></a>
          <a href="/blog"><p>BLOG</p></a>
          <a href="/about"><p>ABOUT</p></a>
          <% if (locals.loggedIn) { %>
          <a href="/account"
            ><p id="login-nav-btn"><%= locals.username %></p></a
          >
          <% } else { %>
          <a href="/login"><p id="login-nav-btn">LOGIN</p></a>
          <% } %>
        </nav>
      </header>

      <main>
        <div class="account-container">
          <!-- Spinner -->
          <div class="account-loading">
            <div class="spinner"></div>
            <p>Loading...</p>
          </div>

          <!-- Actual content -->
          <div class="account-content" style="display: none">
            <div class="account-info">
              <h2>Account Information</h2>
              <p><strong>Username:</strong> <%= locals.username %></p>
              <p><strong>Email:</strong> <%= locals.email %></p>
            </div>
            <div class="account-actions">
              <h2>Actions</h2>
              <ul>
                <li><a href="/account/change/password">Change Password</a></li>
                <li><a href="/account/change/username">Change Username</a></li>
                <li><a href="/logout">Logout</a></li>
              </ul>
            </div>
          </div>
        </div>
      </main>

      <%-include('partials/footer.ejs')%>
    </div>
    <script>
      window.addEventListener("load", () => {
        setTimeout(() => {
          document.querySelector(".account-loading").style.display = "none";
          document.querySelector(".account-content").style.display = "block";
        }, 2000);
      });
    </script>
  </body>
</html>
